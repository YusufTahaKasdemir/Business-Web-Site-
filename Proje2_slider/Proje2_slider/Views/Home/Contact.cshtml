<div class="contact-us section" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact-us-content">
                    <div class="row">
                        <div class="col-lg-4">
                            <div id="map">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1271.021246072051!2d30.33090836457173!3d40.73969505504431!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ccadf2f77d7087%3A0x5047c8436542642b!2sTeknoloji%20Fak%C3%BCltesi%20T4!5e0!3m2!1str!2str!4v1703339330250!5m2!1str!2str" width="100%" height="670px" frameborder="0" style="border:0; border-radius: 23px;" allowfullscreen=""></iframe>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <form id="contact-form" action="" method="post">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="section-heading">
                                            <h2><em>Contact Us</em> &amp; Get In <span>Touch</span></h2>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <fieldset>
                                            <label for="name">Ad:</label>
                                            <input type="text" id="name" required><br>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-6">
                                        <fieldset>
                                            <label for="surname">Soyad:</label>
                                            <input type="text" id="surname" required><br>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-6">
                                        <fieldset>
                                            <label for="email">E-posta:</label>
                                            <input type="email" id="email" required><br>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-6">
                                        <fieldset>
                                            <label for="message">Mesaj:</label>
                                            <textarea id="message" rows="4" required></textarea><br>
                                        </fieldset>
                                    </div>
                                    <div class="col-lg-12">
                                        <fieldset>
                                            <input type="button" value="Gönder" onclick="submitForm()">
                                        </fieldset>
                                    </div>
                                </div>
                            </form>
                            <div class="more-info">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="info-item">
                                            <i class="fa fa-phone"></i>
                                            <h4><a href="#">05445678456</a></h4>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="info-item">
                                            <i class="fa fa-envelope"></i>
                                            <h4><a href="#">info@company.com</a></h4>
                                            <h4><a href="#">hello@company.com</a></h4>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="info-item">
                                            <i class="fa fa-map-marker"></i>
                                            <h4><a href="#">Sakarya,Türkiye</a></h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function submitForm() {
        var name = document.getElementById('name').value;
        var surname = document.getElementById('surname').value;
        var email = document.getElementById('email').value;
        var message = document.getElementById('message').value;

        var data = "Ad: " + name + "\nSoyad: " + surname + "\nE-posta: " + email + "\nMesaj: " + message + "\n\n";

        // LocalStorage kullanarak veriyi sakla
        if (localStorage.getItem('kayitlar')) {
            localStorage.setItem('kayitlar', localStorage.getItem('kayitlar') + data);
        } else {
            localStorage.setItem('kayitlar', data);
        }

        // Başka bir sayfaya yönlendirme yapma, sadece kullanıcıyı bilgilendirme
        alert("Veriler başarıyla kaydedildi.");
    }
</script>
