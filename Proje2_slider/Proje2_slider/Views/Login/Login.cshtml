<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/agency/assets/css/index.css">
    <title>HASH TECHIE OFFICIAL</title>
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form id="myForm" onsubmit="return validateForm()">
                    <h2>Login</h2>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input type="email" id="ename" name="ename" required>
                        <label for="">Email</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input type="password" id="pname" name="pname" required>
                        <label for="">Password</label>
                    </div>
                    <button>Log in</button>
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script>
        function validateForm() {
            var x = document.forms["myForm"]["ename"].value;
            var y = document.forms["myForm"]["pname"].value;
            if (x == "yusuf@gmail.com" && y == "yusuf") {
                window.location.href = "@Url.Action("Register","Register")";
                return false;
            }
            else {
                alert("Hata: Email or password wrong! ");
                return false;
            }
        }
    </script>
</body>
</html>
